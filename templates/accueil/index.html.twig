    <!--Affichage dynamique des catégories-->
    <div class="w-screen mt-24 flex justify-around flex-wrap pt-80">
        <div class="w-full flex flex-wrap justify-around">
            {% for categorie in categories %}
                {% set imageFileName = imagesParCategorie[categorie.id] ?? 'default.png' %}
                <!-- Chaque carte prend 1/4 de la largeur du conteneur sur des écrans medium et plus grands -->
                <div class="flex flex-col mb-3 w-full md:w-1/3 p-3">
                    <div class="shadow-lg">
                        <img src="{{ asset('/image/produits/' ~ imageFileName) }}" class="h-56 w-full object-cover"
                             alt="Image de {{ categorie.nom }}">
                        <div class="text-center py-4">{{ categorie.nom }}</div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>


