<body class="bg-orange-100">

<div id="navbar" class="fixed flex  items-center h-48 top-0 left-0 right-0 z-50 bg-white transition-all duration-300">
        <div id="navbar-content" class=" flex items-center h-2 w-10/12 justify-center p-2 transition-all duration-300">
            <a href="/" class="w-full" aria-label="GreenShop - go to homepage">
                <svg id="logo-svg" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 200 60" class="h-16 transition-all w-full duration-300">
<text x="50%" y="50%" dominant-baseline="middle" text-anchor="middle" class="text-green-500 lg:text-6xl md:text-4xl sm:text-3xl text-2xl">GreenShop</text>
                </svg>
            </a>
        </div>
        <div class=" mt-2  w-2/12 ">
            <div class="flex w-1/2 justify-around items-center">
                <img src="icons8-chercher.svg" class="w-6 h-6" alt="">
                <img src="icons8-sac-vue-de-face-64.png" class="w-6 h-6"  alt="">
                <img src="icons8-utilisateur-24.png" class="w-6 h-6" alt="">
                <img src="icons8-menu.svg" class="w-6 h-6" alt="">
            </div> <!-- Modification de la classe flex-row -->
            
        </div>
    </div>
    
     
    <script>
        document.addEventListener('DOMContentLoaded', () => {
    const navbar = document.getElementById('navbar');
    const logoSvg = document.getElementById('logo-svg');
    const logoText = logoSvg.querySelector('text');

    const adjustBodyPadding = () => {
        const navbarHeight = navbar.offsetHeight;
        document.body.style.paddingTop = navbarHeight + 'px';
    };

    const adjustNavbarHeight = () => {
        // Dynamiquement ajuster la hauteur de la navbar basée sur la hauteur du logo + padding
        const logoHeight = logoSvg.getBoundingClientRect().height;
        const desiredPadding = 20; // Ajustez ce chiffre selon le padding désiré autour du logo
        const newNavbarHeight = logoHeight + (desiredPadding * 2); // Calcul pour inclure le padding haut et bas
        navbar.style.height = `${newNavbarHeight}px`; // Appliquez la nouvelle hauteur à la navbar
        adjustBodyPadding(); // Ajustez le padding du body pour compenser la nouvelle hauteur de la navbar
    };

    // Initial adjustment
    adjustNavbarHeight();

    let lastScrollTop = 0;

    window.addEventListener('scroll', () => {
        let currentScroll = window.pageYOffset || document.documentElement.scrollTop;
        if (currentScroll > lastScrollTop && currentScroll > 100) {
            // Scrolling Down
            logoText.setAttribute('class', 'text-green-500 transition-all duration-300 lg:text-2xl md:text-xl sm:text-lg text-md');
        } else if (currentScroll <= 0) {
            // Scrolling Up - en haut de la page
            logoText.setAttribute('class', 'text-green-500 transition-all duration-300 lg:text-6xl md:text-4xl sm:text-3xl text-2xl');
        }
        adjustNavbarHeight(); // Dynamically adjust the navbar height
        lastScrollTop = currentScroll <= 0 ? 0 : currentScroll;
    });
});


        </script>
        



