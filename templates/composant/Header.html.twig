</body>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Fonction pour afficher/masquer l'input supplémentaire
    function toggleExtraSearchInput() {
      var extraSearchInput = document.getElementById('extra-search-input');
      if (extraSearchInput.classList.contains('hidden')) {
        extraSearchInput.classList.remove('hidden'); // Affiche l'input
      } else {
        extraSearchInput.classList.add('hidden'); // Cache l'input
      }
    }

    // Ajout de l'écouteur d'événement sur la barre de recherche existante
    var searchInput = document.getElementById('search-input');
    if(searchInput) {
      searchInput.addEventListener('click', function() {
        toggleExtraSearchInput();
      });
    }
  });
</script>





