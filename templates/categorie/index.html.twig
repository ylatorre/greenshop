{% extends 'base.html.twig' %}

{% block title %}Catégories{% endblock %}

{% block body %}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>GreenShop</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Lora:wght@400;700&display=swap');
        body {
            font-family: 'Lora', serif;
        }
    </style>
</head>
<body>

{% include './composant/Header.html.twig' %}

{% include 'composant/affichagePage.html.twig' with {'pageName': 'Catégories'} %}

<div class="flex justify-center flex-wrap gap-4">
    {% for categorie in categories %}
        <div class="categorie-item flex flex-col items-center w-1/4 md:w-1/3 lg:w-1/3 xl:w-1/3 h-36 p-2.5 rounded border border-gray-400 border-opacity-50" data-categorie-id="{{ categorie.id }}" style="flex-shrink: 0; padding: 9px 26px 13px 14px;">
            <img src="Image.png" alt="T-shirt eco-résponsable" class="w-32 h-32 object-contain p-2">
            <div class="flex flex-col items-center space-y-3">
                <span class="text-xs mt-2 text-center font-medium">{{categorie.nom}}</span>
            </div>
        </div>
    {% endfor %}
</div>

{% include './composant/bottomBar.html.twig' %}

<script>
    document.querySelectorAll('.categorie-item').forEach(function(item) {
        item.addEventListener('click', function() {
            var categorieId = item.getAttribute('data-categorie-id');
            window.location.href = '{{ path('categorie_show', {'id': 'ID'}) }}'.replace('ID', categorieId);
        });
    });
</script>

</body>
</html>

{% endblock %}
