{% extends 'base.html.twig' %}

{% block title %}Commande index{% endblock %}

{% block body %}
    <h1>Commande index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>CreatedAt</th>
                <th>DatePreparation</th>
                <th>DateExpedie</th>
                <th>DateRecu</th>
                <th>NumeroSuivi</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for commande in commandes %}
            <tr>
                <td>{{ commande.id }}</td>
                <td>{{ commande.createdAt ? commande.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ commande.datePreparation ? commande.datePreparation|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ commande.dateExpedie ? commande.dateExpedie|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ commande.dateRecu ? commande.dateRecu|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ commande.numeroSuivi }}</td>
                <td>
                    <a href="{{ path('app_commande_show', {'id': commande.id}) }}">show</a>
                    <a href="{{ path('app_commande_edit', {'id': commande.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_commande_new') }}">Create new</a>
{% endblock %}
