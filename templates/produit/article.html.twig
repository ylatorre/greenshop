{% extends 'base.html.twig' %}

{% block title %}Hello ArticleController!{% endblock %}

{% block body %}
{% include './composant/Header.html.twig' %}

<div class="container mt-28 mx-auto px-4 py-8">
    <div class="flex flex-wrap -mx-4">
        <div class="w-full lg:w-1/2 px-4 mb-4 lg:mb-0">
            <p class="text-xl font-semibold">{{ product.titre }}</p>
        </div>

    </div>

    <div class="flex justify-center py-4">
        <div class="w-full text-center">
            <div class="carousel" id="myCarousel">
                <!-- Carousel items here -->
            </div>
        </div>
    </div>

    <div class="text-center py-4">
        <!-- Thumbnails or other images here -->
    </div>

    <div class="text-center py-4">
        <p>
            <span class="text-yellow-500">&#9733;</span>
            <span class="text-xl font-bold">{{ product.noteProduit }}</span> <span class="text-lg font-light">({{ product.nombreDeVente }})</span><span> Avis</span>
        </p>
    </div>

    <div class="text-center py-4">
        <p>
            <span class="text-yellow-500">&#9733;</span>
            <span class="text-xl font-bold">4/5 </span> <span> ecoScore</span>
        </p>
    </div>

    <div class="flex justify-center py-2">
        <div class="text-center">
            {# <p class="font-semibold">{{ product.idFournisseur?.nom }}</p> #}
            <p class="font-bold underline">{{ 'Vendeur' }}</p> <!-- Remplacer 'Vendeur' par la variable appropriée si disponible -->
        </div>
    </div>

    <div class="flex justify-center py-2">
        <div class="text-center">
            <p>Select Size</p>
            <div class="flex justify-center space-x-2">
                <button class="border rounded-lg px-3 py-2">S</button>
                <button class="border rounded-lg px-3 py-2">M</button>
                <button class="border rounded-lg px-3 py-2">L</button>
                <button class="border rounded-lg px-3 py-2">XL</button>
            </div>
        </div>
    </div>

    <div class="flex justify-center py-2">
        <div class="flex items-center rounded-lg bg-slate-300 px-4 py-2">
            <button class="bg-white px-2 py-1 rounded-lg">-</button>
            <span class="mx-3">5</span>
            <button class="bg-white px-2 py-1 rounded-lg">+</button>
        </div>
    </div>

    <div class="flex justify-center py-4">
        <div class="border rounded-lg px-4 py-2 text-lime-950 border-lime-950">
            <p>{{ product.prix }}€ TTC</p>
        </div>
    </div>

    <div class="flex justify-center py-4">
    <a href="{{ path('ajouter_au_panier', {'idProduit': product.id}) }}" class="bg-lime-950 rounded-lg text-white px-4 py-2">Ajouter au panier</a>
</div>
<div class="flex justify-center py-4">
    <a href="{{ path('ajouter_aux_favoris', {'idProduit': product.id}) }}" class="rounded-lg text-white px-4 py-2" style="background-color: #FF69B4;">Ajouter aux favoris</a>
</div>


    {# <div class="flex justify-center py-4">
        <button class="bg-emerald-500 rounded-lg text-white px-4 py-2">Acheter maintenant</button>
    </div> #}
</div>

{% include './composant/bottomBar.html.twig' %}

{% endblock %}
