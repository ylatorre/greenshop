{# templates/favoris/index.html.twig #}

{% extends 'base.html.twig' %}

{% block body %}
    <h1>Mes Favoris</h1>

{% include './composant/Header.html.twig' %}

<div class="flex flex-col sm:flex-row w-full  h-screen">
    <div class="w-10"></div>
    <div class="w-full mt-32 sm:w-5/6 px-4 sm:px-0">
{% include './composant/UserBar.html.twig' %}

<div class="flex flex-wrap w-screen justify-center gap-4">
    {% if favoris %}
        {% for ficheProduit in favoris.getFicheProduits %}
            <a href="{{ path('produit_show', {'id': ficheProduit.id}) }}" class="btn btn-primary">
            <div class="h-3/5 sm:w-1/3 w-10/12 bg-white shadow-lg">
                <div class="h-44 border-b-2 border-gray-200">
                    {# Ici, vous devrez ajouter l'image du produit si disponible #}
                    {# <img src="{{ ficheProduit.imageUrl }}" alt="{{ ficheProduit.titre }}"> #}
                </div>
                <div class="w-full h-44 flex flex-col justify-center items-center">
                    <div class="h-1/2 flex flex-col text-center justify-center">
                        <div>
                            <h1 class="font-bold text-gray-800">{{ ficheProduit.description }}</h1>
                            <p class="font-light text-base text-gray-600">{{ ficheProduit.titre }}</p>
                            <p class="font-light text-base text-gray-600">{{ ficheProduit.noteProduit }}</p>
                        </div>
                    </div>
                    
                    <div class="flex h-1/2 items-center">
                        <div class="text-center">
                            <h1 class="font-light text-blue-800 border-blue-800 border mb-4"> {{ ficheProduit.recyclage ? 'Oui' : 'Non' }}</h1>
                            <a class="font-light text-gray-600 text-center"> À partir de</a> <a class="text-gray-600 text-center font-semibold">{{ ficheProduit.prix }} €</a>
                        </div>
                    </div>
                </div>
            </div>
           </a>
        {% else %}
            <p>Aucun favori trouvé.</p>
        {% endfor %}
    {% else %}
        <p>Vous n'avez aucun favori pour le moment.</p>
    {% endif %}
</div>

{% endblock %}
