{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}


{% block body %}

<form method="post" class="flex items-center justify-center">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}

<div class="max-w-md w-full p-4">
        <h1 class="text-3xl font-bold font-lora mb-6 text-center">Connectez-vous</h1>
        <div class="font-OpanSans">
            <div class="mb-4">
                {# <label for="inputEmail" class="block text-gray-700 text-sm font-bold mb-2">Email</label> #}
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="bg-gray-50 mb-1 p-2 w-full border border-gray-300 rounded"  placeholder="email" autocomplete="email" required autofocus>
            </div>

            <div class="mb-4">

                <input type="password" name="password" id="inputPassword" class="bg-gray-50 mb-4 p-2 w-full border border-gray-300 rounded" placeholder="Password" autocomplete="current-password" required>
            </div>

            <div class="mb-4">
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            </div>

            <div>
                <button class="bg-PrimaryGreen text-white py-2 px-4 rounded-full w-full mt-40 mb-2" type="submit">
                    Sign in
                </button>
            </div>
        </div>
    </div>
</form>
<div class="flex items-center justify-center flex-col text-center">

    <div class="mb-4">
        <a class="text-base font-semibold text-SecondaryGreen ">Mot de passe oublié</a>
    </div>
    <div>
        <p class='mb-2'>Vous n’avez pas de compte ? <a class='text-SecondaryGreen'>Inscrivez-vous</a></p>
    </div>

</div>
{% endblock %}
