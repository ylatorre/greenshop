{% extends 'base.html.twig' %}

{% block title %}Mot de passe oublié
{% endblock %}


{% block body %}

	{% include './composant/PageStyle.html.twig' %}

	<div class="bg-white pb-56 pt-52">

		<form method="post" class="flex items-center justify-center">

			<div class="max-w-md w-full p-4">
				<h1 class="text-3xl font-bold text-center">Mot de passe oublié</h1>
				<br><br>
				<div class="font-OpanSans">
					<div class="flex items-center justify-center">
						<div class="text-center mb-6 ">
							<p>Merci d’entrer votre adresse email :</p>
						</div>
					</div>
					<div
						class="mb-4">
						{# <label for="inputEmail" class="block text-gray-700 text-sm font-bold mb-2">Email</label> #}
						<input type="email" value="" name="email" id="inputEmail" class="bg-gray-50 mb-1 p-2 w-full border border-gray-300 rounded" placeholder="Adresse email" autocomplete="email" required autofocus>
					</div>

					<div>
						<button class="bg-green-600 text-white py-2 px-4 rounded-full w-full mt-40 mb-2" type="submit">
							Réinitialiser
						</button>
					</div>
				</div>
			</div>
		</form>
		<div class="flex items-center justify-center flex-col text-center">

			<div class="flex space-x-2">
				<p class='mb-2'>Vous n’avez pas de compte ?</p>
				<a class='text-green-500' href="{{path("app_register")}}">Inscrivez-vous</a>
			</div>

		</div>
	</div>
{% endblock %}
